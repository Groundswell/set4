%html{ lang: :en }
	%head
		= render 'application/goog_tag'
		= render 'application/html_head', args: {}

		= stylesheet_link_tag "//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"

		= javascript_include_tag 'application'

		= stylesheet_link_tag "cube", media: "all"
		
	%body#login-page-full
		#login-full-wrapper{ class: "#{controller_name}_#{controller.action_name}" }
			= yield

		=# render 'application/footer'
